<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/DIMEN_180DP"
    android:layout_height="@dimen/DIMEN_234DP"
    android:layout_marginBottom="@dimen/DIMEN_10DP"
    >

    <ImageView
        android:id="@+id/id_img"
        android:layout_width="@dimen/DIMEN_180DP"
        android:layout_height="@dimen/DIMEN_180DP"
        />
    
    <ImageView
        android:id="@+id/check_box"
        android:background="@mipmap/ic_uncheck"
        android:layout_width="@dimen/DIMEN_30DP"
        android:layout_height="@dimen/DIMEN_30DP"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/DIMEN_10DP"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/id_name_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_27DP"
        android:textSize="@dimen/DIMEN_18SP"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_below="@+id/id_img"
        android:background="@drawable/ar_robot_btn_bg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_30DP"
        android:layout_below="@+id/id_name_tv"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/id_down_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="下载"
            android:textSize="@dimen/DIMEN_18SP"
            android:gravity="center"
            android:textColor="#fff"
            android:background="@drawable/ar_robot_btn_bg"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#fff"
            />
        <TextView
            android:id="@+id/id_collection_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="收藏"
            android:textSize="@dimen/DIMEN_18SP"
            android:gravity="center"
            android:textColor="#fff"
            android:background="@drawable/ar_robot_btn_bg"
            />
    </LinearLayout>

</RelativeLayout>